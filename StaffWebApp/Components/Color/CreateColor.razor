@using WebAppIntegrated.Enum


<MudDialog Style="max-width: 500px; width: 100%;max-height:800px; margin: 0 auto;">
    <TitleContent>
        <MudText Typo="Typo.h5" Class="mr-auto" Style="font-weight: 500;">Thêm mới Màu</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Class="margin" T="string" @bind-Value="_colorVm.Name" Label="Tên màu" Required="true"></MudTextField>

        <MudSelect T="Status" Label="Trạng Thái" @bind-Value="_colorVm.Status" Style="margin:25px 0px" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter" Required="true" RequiredError="Status is required.">
            @foreach (Status status in Enum.GetValues(typeof(Status)))
            {
                <MudSelectItem Value="status">@EnumUtility.ConvertStatusColorSize(status)</MudSelectItem>
            }
        </MudSelect>

    </DialogContent>
    <DialogActions>
        <MudButton OnClick="OnClickCloseBtn">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Lưu</MudButton>
    </DialogActions>
</MudDialog>

<style>
    .margin {
        margin: 8px 0 8px 0;
    }
</style>