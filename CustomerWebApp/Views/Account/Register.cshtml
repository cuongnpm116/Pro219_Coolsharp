@{
    Layout = "Layout";
}

<div class="register-form-container">
    <h2 class="text-center">CoolSharp - Đăng ký</h2>
    <div class="form-group mb-3">
        <label for="lastName">Họ</label>
        <input type="text" class="form-control" id="lastName" name="LastName" />
        <p id="lastNameError" class="text-danger"></p>
    </div>
    <div class="form-group mb-3">
        <label for="firstName">Tên</label>
        <input type="text" class="form-control" id="firstName" name="FirstName" />
        <p id="firstNameError" class="text-danger"></p>
    </div>
    <div class="form-group mb-3">
        <label for="gender">Giới tính</label>
        <select class="form-control" id="gender" name="Gender">
            <option value="0">Không đề cập</option>
            <option value="1">Nam</option>
            <option value="2">Nữ</option>
        </select>
    </div>
    <div class="form-group mb-3">
        <label for="username">Tài khoản</label>
        <input type="text" class="form-control" id="username" name="Username" />
        <p id="usernameError" class="text-danger"></p>
    </div>
    <div class="form-group mb-3">
        <label for="password">Mật khẩu</label>
        <div class="input-group">
            <input type="password" class="form-control" id="password" name="Password" />
            <div class="input-group-append">
                <button type="button" class="btn btn-outline-secondary toggle-password">
                    <i class="fas fa-eye"></i>
                </button>
            </div>
        </div>
        <p id="passwordError" class="text-danger"></p>
    </div>
    <div class="form-group mb-3">
        <label for="confirmPassword">Xác nhận mật khẩu</label>
        <div class="input-group">
            <input type="password" class="form-control" id="confirmPassword" name="ConfirmPassword" />
            <div class="input-group-append">
                <button type="button" class="btn btn-outline-secondary toggle-password">
                    <i class="fas fa-eye"></i>
                </button>
            </div>
        </div>
        <p id="confirmPasswordError" class="text-danger"></p>
    </div>
    <div class="form-group mb-3">
        <label for="emailAddress">Email</label>
        <input type="email" class="form-control" id="emailAddress" name="EmailAddress" />
        <p id="emailError" class="text-danger"></p>
    </div>
    <button class="btn btn-primary w-100" onclick="buttonRegisterClick()">Đăng ký</button>
    <div class="d-flex justify-content-center mt-3">
        <a href="/login">Đã có tài khoản? Hãy đăng nhập</a>
    </div>
</div>

<style>
    .register-form-container {
        max-width: 500px;
        margin: auto;
        margin-top: 30px;
        padding: 20px;
        background: rgba(255, 255, 255, 0.8); /* Màu nền trắng với độ trong suốt */
        border-radius: 8px; /* Bo tròn các góc */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Đổ bóng nhẹ */
    }
</style>

<script src="../Views/Account/Register.cshtml.js"></script>