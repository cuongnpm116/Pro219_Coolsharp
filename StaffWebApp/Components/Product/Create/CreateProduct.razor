@page "/create-product"

<ProductInfoForm @ref=_productInfoForm>
</ProductInfoForm>

<MudPaper Elevation="0">
    <MudButton Variant="Variant.Outlined" Color="Color.Primary" OnClick="AddProductDetail">
        Thêm chi tiết
    </MudButton>

    <MudButton>
        Thêm màu
    </MudButton>
    <MudButton>
        Thêm kích cỡ
    </MudButton>
</MudPaper>

@foreach (var item in _productDetailForms.Keys)
{
    <ProductDetailForm @ref=_productDetailForms[item]
                       ProductDetail="item"
                       Colors="AvailableColors"
                       Sizes="AvailableSizes"
                       OnColorChanged="HandleColorSelectedEvent"
                       OnDetailRemove="RemoveProductDetail" />
}

@foreach (var item in _imagesByColorForms.Keys)
{
    <ImagesByColorForm @ref=_imagesByColorForms[item] Color="item" />
}

<MudButton OnClick="AddProduct">Thêm sản phẩm</MudButton>
<MudButton OnClick="CheckData" Color="Color.Warning">check</MudButton>
